+	mv $@.new $@; \
+	echo ""
 endef
 
 define Build/seama
-	$(STAGING_DIR_HOST)/bin/seama -i $@ $(1)
-	mv $@.seama $@
+	$(STAGING_DIR_HOST)/bin/seama -i $@ $(1); \
+	mv $@.seama $@; \
+	echo ""
 endef
 
 define Build/seama-seal
@@ -105,8 +110,9 @@ define Build/seama-seal
 endef
 
 define Build/wrg-header
-	mkwrgimg -i $@ -d "/dev/mtdblock/2" -s $(1) -o $@.new
-	mv $@.new $@
